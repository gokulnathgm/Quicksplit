        </activity>
        <activity
            android:name=".RegisterUser"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Home"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GroupActivity"
            android:label="@string/title_activity_group" >
        </activity>
        <activity
            android:name=".NewExpense"
            android:label="@string/title_activity_new_expense" >
        </activity>
        <activity
            android:name=".NewGroup"
            android:label="@string/title_activity_new_group" >
        </activity>
        <activity
            android:name=".NewFriend"
            android:label="@string/title_activity_new_friend" >
