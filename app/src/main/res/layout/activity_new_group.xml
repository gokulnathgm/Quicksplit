    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="in.inocular.www.quicksplit.NewGroup">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/groupname"
            android:layout_marginTop="50dp"
            android:hint="Group Name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="50dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create"
            android:id="@+id/createGroup"
            style="@style/BtnTextColor"
            android:background="@color/secondary"
            android:layout_below="@+id/groupname"
            android:layout_alignRight="@+id/groupname"
            android:layout_alignEnd="@+id/groupname"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/cancel"
            style="@style/BtnTextColor"
            android:layout_marginTop="20dp"
            android:background="@color/secondary"
            android:layout_below="@+id/createGroup"
            android:layout_alignRight="@+id/createGroup"
            android:layout_alignEnd="@+id/createGroup"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
